---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<article class="group">
	<a href={href} class="block p-6 rounded-lg hover:bg-medium-hover transition-colors">
		<div class="flex items-start justify-between">
			<div class="flex-1">
				<h3 class="text-medium-h2 font-serif font-bold text-medium-text mb-2 group-hover:text-medium-accent transition-colors">
					{title}
				</h3>
				<p class="text-medium-body text-medium-text-secondary">
					{body}
				</p>
			</div>
			<svg class="w-5 h-5 text-medium-text-secondary group-hover:text-medium-accent transition-colors ml-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
			</svg>
		</div>
	</a>
</article>
